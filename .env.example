# =========================
# Veilnova Fetch Node (.env)
# =========================
# RU: Скопируйте этот файл как .env и заполните значения.
# EN: Copy this file as .env and fill in the values.

# Telegram bot token from @BotFather
# RU: Токен бота из @BotFather
# EN: Bot token from @BotFather
BOT_TOKEN=

# TDLib credentials from https://my.telegram.org (API development tools)
# RU: Данные для telegram-bot-api (TDLib) — берутся на https://my.telegram.org
# EN: Credentials for telegram-bot-api (TDLib) — get them from https://my.telegram.org
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Telegram upload cap (MB) you want to enforce in the bot before downloading/sending
# RU: Лимит (MB), который бот проверяет до скачивания/отправки
# EN: Limit (MB) enforced by the bot before download/send
TG_MAX_UPLOAD_MB=2000
MAX_FILE_MB=2000

# RU: Таймаут сессии Bot API (сек). Влияет на долгие загрузки/отправки.
# EN: Bot API session timeout (sec). Affects long downloads/uploads.
BOT_SESSION_TIMEOUT=900

# RU: TTL меню выбора качества (сек) — после истечения кнопки считаются устаревшими.
# EN: Quality selection menu TTL (sec) — after it expires buttons are considered stale.
QUALITY_MENU_TTL_SEC=900

# RU: Удалять ли статусное сообщение “Скачиваю/Отправляю…” после успеха.
# EN: Whether to delete “Downloading/Sending…” status message after success.
DELETE_STATUS_ON_SUCCESS=true
DELETE_STATUS_DELAY_SEC=2

# Logging / Логи
LOG_LEVEL=INFO
LOG_FILE=/app/bot.log

# yt-dlp / network tweaks
# RU: Имперсонация браузера (curl-cffi) — особенно важно для TikTok.
# EN: Browser impersonation (curl-cffi) — important for TikTok.
YTDLP_IMPERSONATE=chrome

# RU: Принудительно IPv4 (иногда помогает при проблемах IPv6/маршрутизации).
# EN: Force IPv4 (sometimes helps with IPv6 routing issues).
YTDLP_FORCE_IPV4=true
